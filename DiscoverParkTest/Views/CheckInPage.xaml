<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DiscoverParkTest.ViewModels"
             x:Class="DiscoverParkTest.Views.CheckInPage">
    <ContentPage.Resources>
        <vm:CheckInPageVM x:Key="vm" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout BindingContext="{StaticResource vm}">
            <StackLayout VerticalOptions="CenterAndExpand">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Label Text="Hi " />
                    <Label Text="{Binding Customer.GuestName}"
                        VerticalOptions="Center" 
                        HorizontalOptions="CenterAndExpand" />
                </StackLayout>
                <Entry Text="" HorizontalOptions="CenterAndExpand" Placeholder="Please confirm email address" />

            </StackLayout>
            <Button Text="Check In" Command="{Binding CommandCheckIn}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>